    "apexcharts": "^4.3.0",
    "bcryptjs": "^3.0.2",
    "critters": "^0.0.25",
    "flatpickr": "^4.6.13",
    "mongodb": "^6.20.0",
    "mongoose": "^8.19.1",
    "next": "^15.5.4",
    "next-auth": "^4.24.11",
    "next-intl": "^4.3.9",
    "nodemailer": "^6.10.1",
    "posthog-js": "^1.268.3",
    "react": "19.1.1",
    "react-apexcharts": "^1.7.0",
    "react-dnd": "^16.0.1",
