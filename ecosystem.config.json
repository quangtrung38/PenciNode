{
  "apps": [
    {
      "name": "pencinode-web",
      "script": "node_modules/.bin/next",
      "args": "start",
      "env": {
        "NODE_ENV": "production",
        "PORT": "3000"
      },
      "instances": 1,
      "autorestart": true,
      "watch": false,
      "max_memory_restart": "1G"
    },
    {
      "name": "pencinode-socket",
      "script": "socket-server.js",
      "env": {
        "NODE_ENV": "production",
        "SOCKET_PORT": "8080"
      },
      "instances": 1,
      "autorestart": true,
      "watch": false,
      "max_memory_restart": "512M"
    }
  ]
}